# ===========================================
# CONFIGURACIÓN DEL SISTEMA DE COBROS PROCURA
# ===========================================

# Base de datos PostgreSQL (Neon)
DATABASE_URL="postgresql://usuario:password@host:5432/database?sslmode=require"

# Configuración del servidor
NODE_ENV=development
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
PORT=3002

# ===========================================
# CONFIGURACIÓN DE GOOGLE CALENDAR API
# ===========================================
GOOGLE_CLIENT_ID="tu_client_id_de_google"
GOOGLE_CLIENT_SECRET="tu_client_secret_de_google"
GOOGLE_REDIRECT_URI="http://localhost:3002/api/auth/google/callback"

# ===========================================
# CONFIGURACIÓN DE WHATSAPP BUSINESS API
# ===========================================
WHATSAPP_PHONE_NUMBER_ID="tu_phone_number_id"
WHATSAPP_ACCESS_TOKEN="tu_access_token"

# ===========================================
# CONFIGURACIÓN DE TWILIO (ALTERNATIVA WHATSAPP)
# ===========================================
TWILIO_ACCOUNT_SID="tu_twilio_account_sid"
TWILIO_AUTH_TOKEN="tu_twilio_auth_token"
TWILIO_WHATSAPP_FROM="whatsapp:+14155238886"

# ===========================================
# CONFIGURACIÓN DE EMAIL SMTP (GMAIL)
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu_email@gmail.com"
SMTP_PASS="tu_app_password_de_gmail"
FROM_EMAIL="tu_email@gmail.com"

# ===========================================
# CONFIGURACIÓN DE NIMBUS (FACTURACIÓN)
# ===========================================
NIMBUS_API_URL="https://api.nimbus.com"
NIMBUS_API_KEY="tu_api_key_de_nimbus"
NIMBUS_COMPANY_ID="tu_company_id"

# ===========================================
# CONFIGURACIÓN DE MONITOREO Y LOGS
# ===========================================
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_AUDIT_LOGS=true

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
BCRYPT_ROUNDS=12
SESSION_SECRET="tu_session_secret_super_seguro"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================
CORS_ORIGIN="http://localhost:5173,http://localhost:5174"
CORS_CREDENTIALS=true

# ===========================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ===========================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ===========================================
# CONFIGURACIÓN DE BACKUP
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
